{
  "name": "companion",
  "version": "0.0.2",
  "main": "dist/entry.js",
  "scripts": {
    "watch": "nodemon --watch './src/**/*' --ext ts,json --exec npm run build",
    "clean": "npx gulp cleanOutDir",
    "start-kube": "./build/startServer.sh",
    "stop-kube": "kubectl delete --namespace pictaccio-admin -f build/pictaccio.yaml",
    "build": "npx tspc && echo Running post compile tasks... && npx gulp postCompileTasks",
    "build:api": "npx ttsc && rsync -a -v --delete-after ./src/locales ./dist/",
    "build:frontend": "echo Compiling frontend... && npx gulp buildFrontend",
    "build:prod": "npx tspc && cp -r ./node_modules/ ../../cms/companion/",
    "build:windows": "npx ttsc && robocopy /purge /np /nfl ./src/locales ./dist/locales",
    "build:docker": "npx gulp buildDocker",
    "start-aks": "./build/startAKS.sh",
    "test": "NODE_PATH=./src/ NODE_ENV=test mocha -r ts-node/register test/unit/**/*.test.ts",
    "coverage": "NODE_PATH=./src/ NODE_ENV=test nyc mocha -r ts-node/register --fail-zero test/unit/**/*.test.ts",
    "lint": "eslint src/ --ext .ts",
    "typeorm": "NODE_PATH=./src/ node --require ts-node/register build/typeorm_init.ts",
    "cloc": "cloc src --by-file-by-lang"
  },
  "private": true,
  "devDependencies": {
    "@ovos-media/ts-transform-paths": "^1.7.18-1",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/js-yaml": "^4.0.5",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.2.5",
    "@types/node-cron": "^3.0.7",
    "@types/sinon": "^10.0.15",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "chai": "^4.3.7",
    "cloc": "^2.11.0",
    "eslint": "^8.41.0",
    "google-closure-compiler": "^20230502.0.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-strip-comments": "^2.5.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jsdom": "^21.1.0",
    "mitt": "^3.0.0",
    "mocha": "^10.2.0",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "requirejs": "^2.3.6",
    "sass": "^1.62.1",
    "sinon": "^15.1.0",
    "sinon-chai": "^3.7.0",
    "ts-mock-imports": "^1.3.8",
    "ts-node": "^10.9.1",
    "ts-transform-paths": "^3.0.0",
    "ttypescript": "^1.5.15",
    "typedoc": "^0.24.7",
    "typescript": "^4.7.4",
    "uglify-js": "^3.17.4",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@loufa/loufairy": "https://github.com/martinhamel/pictaccio-loufairy.git",
